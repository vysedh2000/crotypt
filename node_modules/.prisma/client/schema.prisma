generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  role_id    Int
  wallet_id  Int?     @unique
  email      String   @unique
  name       String
  password   String
  username   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  role       Role     @relation(references: [id], fields: [role_id])
  wallet     Wallet?  @relation(references: [id], fields: [wallet_id])
}

model Role {
  id   Int    @id @default(autoincrement())
  name String @unique
  user User[]
}

model Wallet {
  id   Int    @id @default(autoincrement())
  uid  String @unique
  user User?
}

model Asset {
  id        Int       @id @default(autoincrement())
  crypto_id Int?
  stock_id  Int?
  assetType AssetType
  quantity  Float
  crypto    Crypto?   @relation(references: [id], fields: [crypto_id])
  stock     Stock?    @relation(references: [id], fields: [stock_id])
}

model Crypto {
  id    Int     @id @default(autoincrement())
  name  String
  asset Asset[]
}

model Stock {
  id    Int     @id @default(autoincrement())
  name  String
  asset Asset[]
}

enum AssetType {
  CRYPTO
  STOCK
}
