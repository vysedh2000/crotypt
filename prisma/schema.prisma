generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Auth {
  id         String    @id @default(uuid())
  email      String    @unique
  username   String    @unique
  password   String
  totp_key   Bytes?
  last_login DateTime?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  user       User?
}

model Session {
  id                  String    @id
  two_factor_verified Boolean   @default(false)
  admin_id            String?
  expires_at          DateTime
  user_id             String?
  site_user_id        String?
  user                User?     @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model User {
  id         String     @id @default(uuid())
  role_id    Int
  wallet_id  Int?        @unique
  email      String      @unique
  name       String?
  username   String
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  role       Role       @relation(references: [id], fields: [role_id])
  wallet     Wallet?     @relation(references: [id], fields: [wallet_id])
  auth       Auth?      @relation(references: [id], fields: [id])
  session    Session[]
}

model Role {
  id   Int    @id @default(autoincrement())
  name String @unique
  user User[]
}

model Wallet {
  id   Int    @id @default(autoincrement())
  uid  String @unique
  user User?
  asset   Asset[]
}

model Asset {
  id          Int   @id @default(autoincrement())
  wallet_id   Int
  crypto_id   Int?
  stock_id    Int?
  assetType   AssetType
  quantity    Float
  crypto      Crypto?     @relation(references: [id], fields: [crypto_id])
  stock       Stock?      @relation(references: [id], fields: [stock_id])
  wallet      Wallet      @relation(references: [id], fields: [wallet_id])
}

model Crypto {
  id      Int   @id @default(autoincrement())
  name    String
  price   Float
  volume  Float
  symbol  String
  asset   Asset[]
}

model Stock {
  id      Int   @id @default(autoincrement())
  name    String
  price   Float
  volume  Float
  symbol  String
  asset   Asset[]
}

enum AssetType {
  CRYPTO
  STOCK
}